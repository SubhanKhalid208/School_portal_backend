# DATABASE - Railway/Neon PostgreSQL
DATABASE_URL=postgresql://username:password@pg.neon.tech/neondb?sslmode=require

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# JWT & Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# Google OAuth (Railway Variables)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=https://your-railway-domain.up.railway.app/api/auth/google/callback

# Frontend URLs
CLIENT_URL=https://your-vercel-domain.vercel.app
NEXT_PUBLIC_API_URL=https://your-railway-domain.up.railway.app

# Cloudinary (Optional - for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Environment
NODE_ENV=production
